{
    "manifest_version": 2,

    "name": "Bar Breaker",
    "description": "Hides fixed headers and footers on pages you visit.",
    "version": "0.1.0",

    "applications": {
        "gecko": {
            "id": "bar-breaker@ris58h"
        }
    },

    "permissions": [
        "storage"
    ],

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["settings.js", "content.js"],
            "css": ["content.css"]
        }
    ],

    "web_accessible_resources": [
        "settings.json"
    ]
}
